name: CD Process
on:
  workflow_dispatch:
  
jobs:
  lint:
    runs-on: ubuntu-latest
    steps:
      - name: Run a one-line script
        run: echo Linting

  build:
    runs-on: ubuntu-latest
    needs: lint
    steps:
      - name: Run a one-line script
        run: echo Building
        
  test:
    runs-on: ubuntu-latest
    needs: build
    steps:
      - name: Run a one-line script
        run: echo Testing
  
  develop:
    runs-on: ubuntu-latest
    environment:
      # Preview Develop
      name: develop
      url: 'https://github.com/antenordev/pipeline-boilerplate'
    needs: test
    steps:
      - name: Run a one-line script
        run: echo Deploy Develop
  
  staging:
    runs-on: ubuntu-latest
    environment:
      name: staging
    needs: develop
    steps:
      - name: Run a one-line script
        run: echo Staging Area
  
  main:
    runs-on: ubuntu-latest
    environment:
      name: main
      # Preview Main
      url: 'https://github.com/antenordev/pipeline-boilerplate'
    needs: staging
    steps:
      - name: Run a one-line script
        run: echo Main
